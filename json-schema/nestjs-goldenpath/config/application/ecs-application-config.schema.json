{
  "$id": "https://raw.githubusercontent.com/ageras-com/schema-collection/v1/json-schema/nestjs-goldenpath/config/application/ecs-application-config.schema.json#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["ecs"],
      "description": "The workload type of the application."
    },
    "ecs": {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "properties": {
            "default": {
              "$ref": "https://raw.githubusercontent.com/ageras-com/schema-collection/v1/json-schema/nestjs-goldenpath/config/workload/ecs-config.schema.json#",
              "description": "The default ECS configuration."
            }
          }
        },
        {
          "type": "object",
          "patternProperties": {
            "^[_a-zA-Z][a-zA-Z0-9_-]*$": {
              "$ref": "https://raw.githubusercontent.com/ageras-com/schema-collection/v1/json-schema/nestjs-goldenpath/config/workload/ecs-config.schema.json#",
              "description": "The environment ECS configuration that overrides the default configuration."
            }
          }
        }
      ],
      "unevaluatedProperties": false,
      "required": ["default"]
    }
  },
  "required": ["type", "ecs"]
}
